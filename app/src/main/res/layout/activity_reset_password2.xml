<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:background="#F4F1EB"> <!-- Ngjyra e background-it është #9ADADA -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Set a new password"
        android:textSize="18sp"
        android:layout_marginBottom="10dp"
        android:textColor="@android:color/black"/> <!-- Teksti është i zi për kontrast -->

    <!-- EditText për fjalëkalimin e ri -->
    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white" /> <!-- EditText me background të bardhë -->

    <!-- EditText për konfirmimin e fjalëkalimit -->
    <EditText
        android:id="@+id/confirmPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Confirm new password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@android:color/black"
        android:background="@android:color/white" /> <!-- EditText me background të bardhë -->

    <!-- Butoni për të dërguar fjalëkalimin e ri -->
    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset Password"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:background="@android:color/holo_green_light"
        android:textColor="@android:color/black" />  <!-- Butoni ka ngjyrë të gjelbër dhe tekst të bardhë -->

</LinearLayout>
